rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to product images
    match /product-images/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only admins should upload product images
    }

    // Allow users to read and write their own profile picture
    match /profile-images/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
